<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
@using LTCSDL_pro.Models;
@model Sach
@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Chi Tiết Sách</h2>

@ViewBag.Sach
    <div id="templatemo_content_right">

        <h1>@Model.TenSach</h1>
        <div class="image_panel"><img src="~/Asset/img/@Model.AnhBia" alt="CSS Template" width="100" height="150" /></div>
        <h2>giá: @string.Format("{0:0,0}", Model.GiaBan.ToString()) VNĐ</h2>
        <ul>
            <li>tác Giả: @Model.TacGia.TenTacGia </li>
            <li>Nhà xuất bản: @Model.NhaXB.TenNXB</li>
            <li> <input type="submit" value="Mua Hàng" id="btnMuaHang" /></li>
            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
            {

                <li> <input type="submit" value="Thêm vào giỏ hàng" id="btnThemGioHang" /></li>
            }
        </ul>
        
        <div style="display: inline-block">
            <h2>Mô tả sách</h2>
            @Model.MoTa
        </div>

        <p></p>



        <div class="cleaner_with_height">&nbsp;</div>

        <a href="index.html"><img src="~/Asset/images/templatemo_ads.jpg" alt="css template ad" /></a>

    

    </div> <!-- end of content right -->
<style>
    #btnMuaHang{
        width:100px;
        height: 30px;
        background-color: white;
        color:black;
        cursor: pointer;
    }
    #btnThemGioHang {
        width: 150px;
        height: 30px;
        background-color: white;
        color: black;
        cursor: pointer;
    }
</style>

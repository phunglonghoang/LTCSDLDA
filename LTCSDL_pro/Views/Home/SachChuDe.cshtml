@using LTCSDL_pro.Models;

@using PagedList.Mvc;
@model List<Sach>
@{
    ViewBag.Title = "SachChuDe";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Sách theo chủ đề </h2>




@{
    ViewBag.Title = "TongTacGia";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@{
    foreach (var item in Model)
    {

    <div id="templatemo_content_right">

        <h1>@item.TenSach<span>(@item.TacGia.TenTacGia)</span></h1>
        <div class="image_panel"><img src="~/Asset/img/@item.AnhBia" alt="CSS Template" width="100" height="150" /></div>
        <h2>giá: @string.Format("{0:0,0}", item.GiaBan.ToString()) VNĐ</h2>
        <ul>

            <li>Nhà xuất bản: @item.TacGia.TenTacGia</li>


        </ul>
        <input type="submit" value="Mua Hàng" id="btnMuaHang" />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = item.MaSach, @strURL = Request.Url.ToString() }))
        {

            <div> <input type="submit" value="Thêm vào giỏ hàng" id="btnThemGioHang" /></div>
        }

        <div class="cleaner_with_height">&nbsp;</div>
        <div style="display: inline-block">

            <h2>Mô tả sách</h2>
            @item.MoTa
        </div>



        <div class="cleaner_with_height">&nbsp;</div>



    </div> <!-- end of content right -->

    }
}

<style>
    .PhanTrang li {
        display: inline;
        margin: 20px;
    }

    .tenTrang {
        text-align: center;
    }
</style>
<style>
    div.mota {
    }

    .templatemo_product_box {
        display: inline;
    }


    #btnMuaHang {
        width: 100px;
        height: 30px;
        background-color: white;
        color: black;
        display: block;
        cursor: pointer;
    }

    #btnThemGioHang {
        width: 150px;
        height: 30px;
        background-color: white;
        color: black;
        display:block;
        cursor:pointer;
    }

    
</style>






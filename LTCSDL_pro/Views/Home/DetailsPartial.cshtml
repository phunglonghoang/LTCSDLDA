<link href="~/Asset/css/templatemo_style.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
@using LTCSDL_pro.Models;
@model List<Sach>

@{
    foreach (var item in Model)
    {

        <div id="templatemo_content_right">

            <h1>@item.TenSach<span>(@item.TacGia.TenTacGia)</span></h1>
            <div class="image_panel"><img src="~/Asset/img/@item.AnhBia" alt="CSS Template" width="100" height="150" /></div>
            <h2>giá: @string.Format("{0:0,0}", item.GiaBan.ToString()) VNĐ</h2>
            <ul>
                <li>tác Giả: @item.TacGia.TenTacGia </li>
                <li>Nhà xuất bản: @item.NhaXB.TenNXB</li>
                <li> <div class="buy_now_button"> <a href="subpage.html"> Mua Ngay</a></div></li>

            </ul>

            <p></p>



            <div class="cleaner_with_height">&nbsp;</div>

            <a href="index.html"><img src="~/Asset/images/templatemo_ads.jpg" alt="css template ad" /></a>

        </div> <!-- end of content right -->

    }
}

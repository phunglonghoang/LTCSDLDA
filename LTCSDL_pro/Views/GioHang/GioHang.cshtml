@using LTCSDL_pro.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Giỏ Hàng</h1>
<table>
    <tr>
        <td class="bgc">Mã Sách</td>

        <td class="bgc">Tên Sách</td>

        <td class="bgc">Ảnh</td>

        <td class="bgc">Đơn giá </td>
        <td class="bgc">Số Lượng</td>
        <td class="bgc">Thành tiền </td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSach</td>

            <td>
                <img src="@Url.Content("~/Asset/img/"+item.sAnhBia)" />
            </td>

            <td>
                @string.Format("{0:0,0}", item.dDonGia) VNĐ
            </td>

            <td>
                @item.iSoLuong
            </td>

            <td>
                @string.Format("{0:0,0}", item.ThanhTien) VNĐ
            </td>


        </tr>


    }
    <tr>
        <td colspan="6" style="text-align:right">
            @Html.ActionLink("sửa đơn hàng", "SuaGioHang")
        </td>
    </tr>
   <tr>
        <td colspan="6" style="text-align:right">
            @using (Html.BeginForm("DatHang", "GioHang"))
              {
                <input type="submit" value="Đặt Hàng" />
            }
        </td>
    </tr>


</table>
<style>
    td>img {
        width: 70px;
        height:120px;
    }
    table{
        border: 1px solid;
    }
   
    td {
        margin: 5px;
        padding:5px;
    }
    td.bgc{
        background-color:darkred;
    }
</style>



